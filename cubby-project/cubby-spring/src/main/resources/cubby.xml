<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context    
    http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />

	<bean id="pathResolver" class="org.seasar.cubby.routing.impl.PathResolverImpl">
		<constructor-arg>
			<bean id="pathTemplateParser" class="org.seasar.cubby.routing.impl.PathTemplateParserImpl" />
		</constructor-arg>
	</bean>

	<!-- spi -->
	<bean id="containerProvider"
		class="org.seasar.cubby.plugins.spring.spi.SpringContainerProvider"
		scope="singleton">
	</bean>

	<bean id="converterProvider"
		class="org.seasar.cubby.plugins.spring.spi.SpringConverterProvider"
		scope="singleton" init-method="initialize">
	</bean>

	<bean id="pathResolverProvider"
		class="org.seasar.cubby.plugins.spring.spi.SpringPathResolverProvider"
		scope="singleton" init-method="initialize">
	</bean>

	<bean id="requestParserProvider"
		class="org.seasar.cubby.plugins.spring.spi.SpringRequestParserProvider"
		scope="singleton">
	</bean>

	<bean id="beanDescProvider" class="org.seasar.cubby.spi.beans.impl.DefaultBeanDescProvider"
		scope="singleton">
	</bean>

	<bean class="org.seasar.cubby.action.impl.ActionErrorsProxy"
		scope="request" autowire="constructor">
	</bean>

	<bean class="org.seasar.cubby.action.impl.FlashMapProxy"
		scope="request" autowire="constructor">
	</bean>

	<bean class="org.seasar.cubby.action.impl.ActionContextProxy"
		scope="request" autowire="constructor">
	</bean>

</beans>